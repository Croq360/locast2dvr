<root xmlns="urn:schemas-upnp-org:device-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <device>
    <deviceType>urn:schemas-upnp-org:device:MediaServer:1</deviceType>
    <friendlyName>{{friendly_name}}</friendlyName>
    <manufacturer>locast2dvr</manufacturer>
    <modelName>{{device_model}}</modelName>
    <modelNumber>{{device_version}}</modelNumber>
    <serialNumber/>
    <UDN>uuid:{{uid}}</UDN>
  </device>
  <URLBase>http://{{host_and_port}}</URLBase>
</root>
